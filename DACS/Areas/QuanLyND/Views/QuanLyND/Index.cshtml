    <script>
        document.getElementById("add-user-form").addEventListener("submit", function (e) {
            e.preventDefault();

            const name = document.getElementById("user-name").value.trim();
            const email = document.getElementById("user-email").value.trim();
            const phone = document.getElementById("user-phone").value.trim();
            const role = document.getElementById("user-role").value;

            if (!name || !email || !phone || !role) {
                alert("Vui lòng nhập đầy đủ thông tin!");
                return;
            }

            const newRow = document.createElement("tr");
            newRow.dataset.status = "chờ xác minh"; // mặc định là chờ xác minh
            newRow.innerHTML = `
                <td>${name}</td>
                <td>${email}</td>
                <td>${phone}</td>
                <td>${role}</td>
                <td><span class="badge bg-warning text-dark">Chờ xác minh</span></td>
                <td>${new Date().toLocaleDateString('vi-VN')}</td>
                <td class="actions text-center"></td>
            `;

            document.querySelector("#userTable tbody").appendChild(newRow);
            renderActions(); // để thêm nút hành động tương ứng
            updateUserStats(); // cập nhật thống kê

            // Reset form & đóng modal
            document.getElementById("add-user-form").reset();
            bootstrap.Modal.getInstance(document.getElementById('addUserModal')).hide();
        });
    </script>

