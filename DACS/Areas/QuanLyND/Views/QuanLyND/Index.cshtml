                        <input type="text" class="form-control form-control-sm" placeholder="Tìm theo tên, email, SĐT...">
                    </div>
                    <div class="col-md-2">
                        <select class="form-select form-select-sm">
                            <option selected>Lọc theo vai trò</option>
                            <option value="admin">Admin</option>
                            <option value="seller">Người bán</option>
                            <option value="buyer">Người mua</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select form-select-sm">
                            <option selected>Lọc theo trạng thái</option>
                            <option value="active">Hoạt động</option>
                            <option value="inactive">Bị khóa</option>
                            <option value="pending">Chờ xác minh</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-sm btn-primary w-100">Áp dụng</button>
                    </div>
                    <div class="col-md-2 text-end">
                        <button class="btn btn-sm btn-success"><i class="fas fa-plus me-1"></i> Thêm mới</button>
                    </div>
                </div>
            </div>

            <div class="table-responsive bg-white p-3 rounded shadow-sm">
