@* Ở cuối file Edit.cshtml *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @* Giữ nguyên phần script preview ảnh của bạn *@
    <script>
        // ... (script previewEditImage của bạn ở đây) ...
        const avatarPreview = document.getElementById('avatarPreviewEdit');
        const avatarUploadInput = document.getElementById('avatarUploadInput');
        function previewEditImage(event) {
            const reader = new FileReader();
            reader.onload = function () { if(avatarPreview) avatarPreview.src = reader.result; }
            if (event.target.files && event.target.files[0]) { reader.readAsDataURL(event.target.files[0]); }
        }
    </script>

    <script>
        $(document).ready(function () {
            var provinceSelect = $('#provinceSelect');
            var districtSelect = $('#districtSelect');
            var wardSelect = $('#wardSelect');

            var districtsUrl = provinceSelect.data('districts-url');
            var wardsUrl = districtSelect.data('wards-url');

            provinceSelect.on('change', function () {
                var provinceId = $(this).val();
                districtSelect.empty().append('<option value="">-- Đang tải Quận/Huyện... --</option>').prop('disabled', true);
                wardSelect.empty().append('<option value="">-- Chọn Xã/Phường --</option>').prop('disabled', true);

                if (provinceId) {
                    var url = districtsUrl + '?provinceId=' + provinceId;
                    console.log("Requesting Districts URL:", url);

                    $.getJSON(url)
                        .done(function (data) {
                            districtSelect.empty();
                            if (data && data.length > 0) {
                                districtSelect.append('<option value="">-- Chọn Quận/Huyện --</option>').prop('disabled', false);
                                $.each(data, function (index, item) {
                                    districtSelect.append($('<option>', {
                                        value: item.value,
                                        text: item.text
                                    }));
                                });
                            } else {
                                districtSelect.append('<option value="">-- Không có Quận/Huyện --</option>');
                            }
                        })
                        .fail(function (jqXHR, textStatus, errorThrown) {
                            console.error("Lỗi khi tải Quận/Huyện:", textStatus, errorThrown);
                            districtSelect.empty().append('<option value="">Lỗi tải Quận/Huyện</option>');
                        });
                }
            });

            districtSelect.on('change', function () {
                var districtId = $(this).val();
                wardSelect.empty().append('<option value="">-- Đang tải Xã/Phường... --</option>').prop('disabled', true);

                if (districtId) {
                    var url = wardsUrl + '?districtId=' + districtId;
                    console.log("Requesting Wards URL:", url);

                    $.getJSON(url)
                        .done(function (data) {
                            wardSelect.empty();
                            if (data && data.length > 0) {
                                wardSelect.append('<option value="">-- Chọn Xã/Phường --</option>').prop('disabled', false);
                                $.each(data, function (index, item) {
                                    wardSelect.append($('<option>', {
                                        value: item.value,
                                        text: item.text
                                    }));
                                });
                            } else {
                                wardSelect.append('<option value="">-- Không có Xã/Phường --</option>');
                            }
                        })
                        .fail(function (jqXHR, textStatus, errorThrown) {
                            console.error("Lỗi khi tải Xã/Phường:", textStatus, errorThrown);
                            wardSelect.empty().append('<option value="">Lỗi tải Xã/Phường</option>');
                        });
                }
            });
        });
    </script>

}