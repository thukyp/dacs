    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const categoryFilter = document.getElementById("category-filter-select");
            const table = document.querySelector("table");
            const rows = Array.from(table.querySelectorAll("tbody tr"));

            // Hàm chuẩn hoá text tiếng Việt (bỏ dấu)
            function normalizeText(text) {
                return text.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");
            }

            function filterByCategory() {
                const selectedValue = normalizeText(categoryFilter.value);

                rows.forEach(row => {
                    const productName = row.cells[0].textContent.trim().toLowerCase();
                    const normalizedName = normalizeText(productName);

                    if (!selectedValue || normalizedName.includes(selectedValue)) {
                        row.style.display = "";
                    } else {
                        row.style.display = "none";
                    }
                });
            }

            categoryFilter.addEventListener("change", filterByCategory);
        });
    </script>
