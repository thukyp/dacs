    <script>
                                document.addEventListener("DOMContentLoaded", function() {
          function updateProductStats() {
            const tableBody = document.getElementById('product-table-body');
            const rows = tableBody.querySelectorAll('tr');

            let total = 0;
            let inStock = 0;
            let outStock = 0;

            rows.forEach(row => {
              const khoiLuongCell = row.cells[2].textContent.trim(); // Lấy cột Khối lượng
              const match = khoiLuongCell.match(/(\d+)/); // Tách số kg

              if (match) {
                const khoiLuong = parseInt(match[1]);
                total++;

                if (khoiLuong > 0) {
                  inStock++;
                } else {
                  outStock++;
                }
              }
            });

            // Cập nhật số liệu vào Stat Cards
            document.getElementById('total-products').textContent = total;
            document.getElementById('in-stock-products').textContent = inStock;
            document.getElementById('out-stock-products').textContent = outStock;
          }

          // Gọi hàm khi trang tải xong
          updateProductStats();
        });
                </script>
