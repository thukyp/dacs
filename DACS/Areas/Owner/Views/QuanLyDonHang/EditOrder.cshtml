@model DACS.Models.DonHang
@{
    ViewData["Title"] = $"Sửa Đơn Hàng {Model.M_DonHang}";
    // Layout = "_AdminLayout"; // Đặt Layout của bạn ở đây nếu có
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/AdminLayout.css" /> @* Đường dẫn tới CSS layout của bạn *@
    <style>
        /* Basic CSS - move to external files if possible */
        body, html {
            height: 100%;
        }

        .container {
            display: grid;
            max-width: 100%;
            width: 100%;
            margin: 0;
            padding: 0;
            flex-direction: row;
        }

        .sidebar {
            background-color: #212529;
            color: #fff;
            padding: 15px;
            width: 250px;
            flex-shrink: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

            .sidebar h4 {
                border-bottom: 1px solid #495057;
                padding-bottom: 10px;
                font-size: 1.25rem;
                margin-bottom: 1rem;
                font-weight: 600;
            }

            .sidebar .nav {
                flex-grow: 1;
            }

            .sidebar .nav-link {
                color: #adb5bd;
                padding: 8px 15px;
                border-radius: 0.25rem;
                margin-bottom: 5px;
                font-size: 0.9rem;
            }

                .sidebar .nav-link.active, .sidebar .nav-link:hover {
                    color: #fff;
                    background-color: #495057;
                }

            .sidebar .nav-item.mt-auto {
                margin-top: auto;
                border-top: 1px solid #495057;
                padding-top: 15px;
            }

            .sidebar .logout-form button {
                padding: 8px 15px;
                color: #dc3545;
                background: none;
                border: none;
                width: 100%;
                text-align: left;
                font-size: 0.9rem;
            }

                .sidebar .logout-form button:hover {
                    background-color: rgba(220, 53, 69, 0.1);
                    color: #bd2130;
                }

        .main-content-area {
            padding: 25px;
            background-color: #f8f9fa;
            flex-grow: 1;
            overflow-y: auto;
        }

        .header {
            font-size: 1.75rem;
            font-weight: 500;
            margin-bottom: 1rem;
            color: #343a40;
        }

        .stat-card {
            background-color: #fff;
            border-radius: 0.375rem;
            padding: 15px;
            margin-bottom: 1rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            text-align: center;
        }

            .stat-card .value {
                font-size: 1.5rem;
                font-weight: 600;
            }

            .stat-card .label {
                font-size: 0.9rem;
                color: #6c757d;
            }

        .filter-section {
            background-color: #fff;
            padding: 15px;
            border-radius: 0.375rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .table th {
            font-weight: 600;
            font-size: 0.85rem;
        }

        .table td {
            font-size: 0.85rem;
            vertical-align: middle;
        }

        .table .actions form, .table .actions a, .table .actions button {
            margin-right: 3px;
            display: inline-block;
        }
        /* Adjust spacing */
        .table .actions .btn-sm {
            padding: 0.2rem 0.4rem;
            font-size: 0.75rem;
        }
        /* Smaller buttons */
        .table .badge {
            font-size: 0.75rem;
            padding: 0.3em 0.5em;
        }

        .user-display span {
            display: block;
        }

        .user-display small {
            color: #6c757d;
            font-size: 0.9em;
        }
    </style>
    </head>
<body>

    @* --- Main Layout Container --- *@
    <div class="d-flex">
        @* --- Sidebar --- *@
        <div class="sidebar">
            <h2>OWNER</h2>
            <ul class="nav flex-column">
                @* Điều chỉnh các asp-controller và asp-action cho phù hợp với cấu trúc của bạn *@
                <li class="nav-item"><a area="Owner" asp-controller="QuanLyDonHang" asp-action="Index" class="nav-link"><i class="fas fa-tachometer-alt me-2"></i> Dashboard</a></li>
                <li class="nav-item"><a area="Owner" asp-controller="DoanhThu" asp-action="Index" class="nav-link"><i class="fas fa-chart-line me-2"></i> Doanh thu</a></li>
                <li class="nav-item"><a area="Owner" asp-controller="QuanLyND" asp-action="Index" class="nav-link"><i class="fas fa-users me-2"></i> Quản lý Tài khoản</a></li>
                <li class="nav-item"><a area="Owner" asp-controller="QuanLySP" asp-action="Index" class="nav-link"><i class="fas fa-box-open me-2"></i> Quản lý Sản phẩm</a></li>
                <li class="nav-item"><a area="Owner" asp-controller="QuanLyXNK" asp-action="Index" class="nav-link"><i class="fas fa-truck-loading me-2"></i> Quản lý Thu gom</a></li>
                <li class="nav-item"><a area="Owner" asp-controller="QuanLyDonHang" asp-action="Index" class="nav-link active"><i class="fas fa-receipt me-2"></i> Quản lý Đơn Hàng</a></li>
                <li class="nav-item"><a area="Owner" asp-controller="QuanLyThanhToan" asp-action="Index" class="nav-link"><i class="fas fa-credit-card me-2"></i> Quản lý Thanh toán</a></li>
                
                
            </ul>
            <div class="nav-item mt-auto ">
                <button type="submit" class="text-danger border-0 bg-transparent p-0 w-100 text-start mt-1">
                    @* Adjusted button style to better match list items *@
                    <a href="/home/index" class="border-0 text-danger" style="text-decoration: none;"><i class="fas fa-sign-out-alt fa-fw me-2"></i> Về trang chủ</a>
                </button>
            </div>
        </div>

        <div class="main-content-area">
            <div class="page-header">@ViewData["Title"]</div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card-custom">
                <form asp-action="EditOrder" asp-controller="QuanLyDonHang" area="Owner" asp-route-id="@Model.M_DonHang" method="post">
                    @* Hiển thị tất cả lỗi validation ở đầu form *@
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    @* M_DonHang là khóa chính và không được sửa, truyền ẩn đi *@
                    <input type="hidden" asp-for="M_DonHang" />

                    @* Các trường thông tin gốc có thể hiển thị ở dạng readonly nếu cần tham khảo *@
                    <fieldset disabled class="mb-3">
                        <legend class="h6">Thông tin đơn hàng gốc (không sửa)</legend>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Mã Khách Hàng</label>
                                <input type="text" class="form-control" value="@Model.M_KhachHang" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Tên Khách Hàng</label>
                                <input type="text" class="form-control" value="@(Model.KhachHang?.Ten_KhachHang ?? "N/A")" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Ngày Đặt</label>
                                <input type="text" class="form-control" value="@Model.NgayDat.ToString("dd/MM/yyyy HH:mm")" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Tổng Tiền</label>
                                <input type="text" class="form-control" value="@Model.TotalPrice.ToString("N0") đ" />
                            </div>
                        </div>
                    </fieldset>

                    <hr />
                    <p class="fw-bold">Thông tin có thể chỉnh sửa:</p>

                    <div class="mb-3">
                        <label asp-for="KhachHang.Ten_KhachHang" class="form-label">Tên Người Nhận</label>
                        <input asp-for="KhachHang.Ten_KhachHang" class="form-control" />
                        <span asp-validation-for="KhachHang.Ten_KhachHang" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="KhachHang.SDT_KhachHang" class="form-label">SĐT Người Nhận</label>
                        <input asp-for="KhachHang.SDT_KhachHang" class="form-control" />
                        <span asp-validation-for="KhachHang.SDT_KhachHang" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ShippingAddress" class="form-label">Địa Chỉ Giao Hàng</label>
                        <textarea asp-for="ShippingAddress" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Ghi Chú Đơn Hàng</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    @*
                        LƯU Ý:
                        - Controller của bạn dùng [Bind("M_DonHang,DiaChiGiaoHang,GhiChu,TenNguoiNhan,SDTNguoiNhan")] DonHang editedDonHang
                        Điều này có nghĩa là chỉ những trường này mới được cập nhật từ form.
                        - Nếu bạn muốn giữ nguyên giá trị của các trường khác không có trong [Bind] khi model được POST về,
                          bạn không cần thêm hidden input cho chúng vì chúng sẽ không bị ghi đè bởi model binding nếu không có trong [Bind].
                          Tuy nhiên, nếu bạn không dùng [Bind] và POST toàn bộ đối tượng DonHang, thì các trường không có input trên form
                          sẽ bị null hoặc default, khi đó bạn cần hidden input cho những trường muốn giữ giá trị.
                          Với cách dùng [Bind] như trên, bạn chỉ cần input cho những trường được phép sửa.
                    *@

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i> Lưu Thay Đổi</button>
                        <a asp-action="Details" asp-controller="QuanLyDonHang" area="Owner" asp-route-id="@Model.M_DonHang" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i> Quay Lại Chi Tiết</a>
                        <a asp-action="Index" asp-controller="QuanLyDonHang" area="Owner" class="btn btn-outline-secondary"><i class="fas fa-list me-2"></i> Danh sách Đơn Hàng</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @* Partial view cho các script validation (nếu bạn đã cấu hình) *@
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>