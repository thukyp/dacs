<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - Báo Cáo Doanh Thu</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <link rel="stylesheet" href="/css/AdminLayout.css" />
    <link rel="stylesheet" href="/css/AdminRevenueReport.css" />
    <style>
        /* CSS cơ bản cho ví dụ này - Bạn nên đưa vào file CSS riêng */
        body, html {
            height: 100%;
        }

        .container {
            display: grid;
            max-width: 100%;
            width: 100%;
            margin: 0;
            padding: 0;
            flex-direction: row;
        }
        .sidebar {
            background-color: #212529;
            color: #fff;
            padding: 15px;
            width: 250px;
            flex-shrink: 0;
            min-height: 100vh;
        }

            .sidebar h2 {
                border-bottom: 1px solid #495057;
                padding-bottom: 10px;
                font-size: 1.5rem;
            }

            .sidebar .nav-link {
                color: #adb5bd;
                padding: 8px 15px;
            }

                .sidebar .nav-link.active, .sidebar .nav-link:hover {
                    color: #fff;
                    background-color: #495057;
                    border-radius: 0.25rem;
                }

        .main-content-area {
            padding: 25px;
            background-color: #f8f9fa;
            flex-grow: 1;
            overflow-y: auto;
        }

        .page-header {
            font-size: 1.75rem;
            font-weight: 500;
            margin-bottom: 1.5rem;
            color: #343a40;
        }

        .stat-card { /* Giữ nguyên style stat-card */
            background-color: #fff;
            border-radius: 0.375rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            text-align: center;
        }

            .stat-card .value {
                font-size: 1.75rem;
                font-weight: 600;
                color: #198754; /* Màu xanh lá cho doanh thu */
            }

            .stat-card .label {
                font-size: 0.9rem;
                color: #6c757d;
                margin-top: 0.25rem;
            }

        .filter-card { /* Giữ nguyên style filter-card */
            background-color: #fff;
            padding: 1rem 1.5rem;
            border-radius: 0.375rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .chart-card { /* Style cho card chứa biểu đồ */
            background-color: #fff;
            border-radius: 0.375rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

            .chart-card h5 {
                margin-bottom: 1rem;
                font-weight: 500;
                color: #495057;
            }

        .table-container { /* Giữ nguyên style table-container */
            background-color: #fff;
            padding: 1.5rem;
            border-radius: 0.375rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            margin-top: 1.5rem; /* Thêm margin top */
        }

        .table th {
            font-weight: 600;
            background-color: #e9ecef;
        }

        .table td {
            vertical-align: middle;
            font-size: 0.9rem;
        }
        /* Định dạng tiền tệ */
        .currency {
            text-align: right;
            font-weight: 500;
        }

    </style>
</head>
<body>

    <div class="d-flex">
        <div class="sidebar">
            <h2>OWNER</h2>
            <ul class="nav flex-column">
                <li class="nav-item"><a asp-area="Owner" asp-controller="Owner" asp-action="Index" class="nav-link "><i class="fas fa-tachometer-alt me-2"></i> Dashboard</a></li>
				<li class="nav-item"><a asp-area="Owner" asp-controller="Owner" asp-action="DoanhThu" class="nav-link active"><i class="fas fa-chart-line me-2"></i> Doanh thu</a></li>
                <li class="nav-item"><a asp-area="Owner" asp-controller="Owner" asp-action="QuanLyTaiKhoan" class="nav-link"><i class="fas fa-users me-2"></i> Quản lý Tài khoản</a></li>
                <li class="nav-item"><a asp-area="Owner" asp-controller="Owner" asp-action="Quanlysanpham" class="nav-link"><i class="fas fa-box-open me-2"></i> Quản lý Sản phẩm</a></li>
                <li class="nav-item"><a asp-area="Owner" asp-controller="Owner" asp-action="ThuGom" class="nav-link"><i class="fas fa-truck-loading me-2"></i> Quản lý Thu gom</a></li>
                <li class="nav-item"><a asp-area="Owner" asp-controller="Owner" asp-action="QuanLyDonHang" class="nav-link"><i class="fas fa-receipt me-2"></i> Quản lý Đơn Hàng</a></li>
                <li class="nav-item"><a asp-area="Owner" asp-controller="Owner" asp-action="QuanLyGiaoDichThanhToan" class="nav-link"><i class="fas fa-credit-card me-2"></i> Quản lý Thanh toán</a></li>
                <li class="nav-item"><a href="#" class="nav-link"><i class="fas fa-cog me-2"></i> Cài đặt</a></li>
                <li class="nav-item mt-auto pt-3 border-top border-secondary"><a href="#" class="nav-link"><i class="fas fa-sign-out-alt me-2"></i> Đăng xuất</a></li>
            </ul>
        </div>

        <div class="main-content-area">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="page-header mb-0">Báo Cáo Doanh Thu</div>
                <div>
                    <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-download me-1"></i> Xuất Báo Cáo</button>
                </div>
            </div>


            <div class="filter-card">
                <div class="row g-3 align-items-center">
                    <div class="col-md-auto">
                        <label for="dateRangePreset" class="form-label form-label-sm mb-0 me-2">Xem theo:</label>
                    </div>
                    <div class="col-md-2">
                        <select id="dateRangePreset" class="form-select form-select-sm">
                            <option value="today">Hôm nay</option>
                            <option value="yesterday">Hôm qua</option>
                            <option value="7days" selected>7 ngày qua</option>
                            <option value="30days">30 ngày qua</option>
                            <option value="this_month">Tháng này</option>
                            <option value="last_month">Tháng trước</option>
                            <option value="custom">Tùy chỉnh...</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="date" id="date-from-filter" class="form-control form-control-sm" title="Từ ngày (Tùy chỉnh)" style="display: none;">
                    </div>
                    <div class="col-md-2">
                        <input type="date" id="date-to-filter" class="form-control form-control-sm" title="Đến ngày (Tùy chỉnh)" style="display: none;">
                    </div>
                    <div class="col-md-auto">
                        <button class="btn btn-sm btn-primary">Xem báo cáo</button>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card">
                        <div class="value">15,800,000 đ</div>
                        <div class="label">Tổng Doanh Thu (7 ngày)</div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card">
                        <div class="value text-primary">75</div>
                        <div class="label">Tổng Đơn Hàng</div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card">
                        <div class="value text-secondary">210,667 đ</div>
                        <div class="label">Trung bình/Đơn hàng</div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card">
                        <div class="value text-success">+ 12%</div>
                        <div class="label">So với kỳ trước</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="chart-card">
                        <h5>Doanh thu theo thời gian</h5>
                        <canvas id="revenueOverTimeChart" height="150"></canvas>
                        <p class="text-center text-muted mt-2"><small>Biểu đồ doanh thu (Cần thư viện JS như Chart.js)</small></p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="chart-card">
                        <h5>Doanh thu theo loại phụ phẩm</h5>
                        <canvas id="revenueByCategoryChart" height="150"></canvas>
                        <p class="text-center text-muted mt-2"><small>Biểu đồ phân bố (Cần thư viện JS)</small></p>
                    </div>
                </div>
            </div>

            <div class="table-container">
                <h5 class="mb-3">Doanh thu chi tiết theo ngày (Ví dụ)</h5>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Ngày</th>
                                <th class="text-center">Số đơn hàng</th>
                                <th class="text-end">Doanh thu</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>04/04/2025</td>
                                <td class="text-center">15</td>
                                <td class="currency">3,500,000 đ</td>
                            </tr>
                            <tr>
                                <td>03/04/2025</td>
                                <td class="text-center">12</td>
                                <td class="currency">2,800,000 đ</td>
                            </tr>
                            <tr>
                                <td>02/04/2025</td>
                                <td class="text-center">10</td>
                                <td class="currency">2,100,000 đ</td>
                            </tr>
                            <tr>
                                <td>01/04/2025</td>
                                <td class="text-center">11</td>
                                <td class="currency">2,400,000 đ</td>
                            </tr>
                            <tr>
                                <td>31/03/2025</td>
                                <td class="text-center">9</td>
                                <td class="currency">1,900,000 đ</td>
                            </tr>
                            <tr>
                                <td>30/03/2025</td>
                                <td class="text-center">8</td>
                                <td class="currency">1,600,000 đ</td>
                            </tr>
                            <tr>
                                <td>29/03/2025</td>
                                <td class="text-center">10</td>
                                <td class="currency">1,500,000 đ</td>
                            </tr>
                            <tr class="table-light">
                                <td colspan="2" class="text-end fw-bold">Tổng cộng (7 ngày):</td>
                                <td class="currency fw-bold">15,800,000 đ</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // JS để xử lý việc hiện/ẩn date range tùy chỉnh khi chọn "Tùy chỉnh..."
        const dateRangePreset = document.getElementById('dateRangePreset');
        const dateFromFilter = document.getElementById('date-from-filter');
        const dateToFilter = document.getElementById('date-to-filter');

        if(dateRangePreset){
            dateRangePreset.addEventListener('change', function() {
                if (this.value === 'custom') {
                    dateFromFilter.style.display = 'block';
                    dateToFilter.style.display = 'block';
                } else {
                    dateFromFilter.style.display = 'none';
                    dateToFilter.style.display = 'none';
                }
            });
            // Trigger change để kiểm tra giá trị ban đầu (nếu không phải custom thì ẩn đi)
            dateRangePreset.dispatchEvent(new Event('change'));
        }


        // --- JS KHỞI TẠO VÀ VẼ BIỂU ĐỒ SẼ Ở ĐÂY ---
        // Ví dụ cơ bản với Chart.js (Cần dữ liệu thật từ backend)
        const ctxRevenueTime = document.getElementById('revenueOverTimeChart');
        if (ctxRevenueTime) {
            new Chart(ctxRevenueTime, {
                type: 'line', // Loại biểu đồ đường
                data: {
                    labels: ['29/03', '30/03', '31/03', '01/04', '02/04', '03/04', '04/04'], // Nhãn trục X (Ngày)
                    datasets: [{
                        label: 'Doanh thu (VNĐ)',
                        data: [1500000, 1600000, 1900000, 2400000, 2100000, 2800000, 3500000], // Dữ liệu doanh thu tương ứng
                        borderColor: 'rgb(75, 192, 192)',
                        tension: 0.1 // Độ cong của đường
                    }]
                },
                options: { scales: { y: { beginAtZero: true } } }
            });
        }

         const ctxRevenueCategory = document.getElementById('revenueByCategoryChart');
         if(ctxRevenueCategory) {
             new Chart(ctxRevenueCategory, {
                 type: 'pie', // Loại biểu đồ tròn
                 data: {
                     labels: ['Rơm Rạ', 'Vỏ Trấu', 'Xơ Dừa', 'Thân Ngô', 'Khác'],
                     datasets: [{
                         label: 'Doanh thu theo loại',
                         data: [5000000, 3000000, 4500000, 2000000, 1300000], // Dữ liệu doanh thu ví dụ
                         backgroundColor: [
                             'rgba(255, 99, 132, 0.7)',
                             'rgba(54, 162, 235, 0.7)',
                             'rgba(255, 206, 86, 0.7)',
                             'rgba(75, 192, 192, 0.7)',
                             'rgba(153, 102, 255, 0.7)',
                         ],
                         hoverOffset: 4
                     }]
                 },
                 options: { responsive: true, maintainAspectRatio: true } // Giữ tỉ lệ khi resize
             });
         }

    </script>

</body>
</html>