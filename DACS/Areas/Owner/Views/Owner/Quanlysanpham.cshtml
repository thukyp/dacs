<script>
    // Khởi tạo Bootstrap tooltips cho các nút actions
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl)
    })

    // --- Xóa các hàm JS cũ searchProduct(), filterPrice() ---
    // Logic tìm kiếm, lọc, phân trang mới sẽ cần JS phức tạp hơn (thường gọi API)

            function searchProduct() {
                let input = document.getElementById("search-bar").value.toLowerCase();
                let rows = document.querySelectorAll(".product-table tbody tr");
                rows.forEach(row => {
                    let productName = row.cells[0].innerText.toLowerCase();
                    row.style.display = productName.includes(input) ? "" : "none";
                });
            }

            function filterPrice() {
                let option = document.getElementById("price-filter").value;
                let table = document.querySelector(".product-table tbody");
                let rows = Array.from(table.rows);
                rows.sort((a, b) => {
                    let priceA = parseInt(a.cells[1].innerText.replace("đ/kg", ""));
                    let priceB = parseInt(b.cells[1].innerText.replace("đ/kg", ""));
                    return option === "low" ? priceA - priceB : priceB - priceA;
                });
                table.innerHTML = "";
                rows.forEach(row => table.appendChild(row));

            }
</script>

